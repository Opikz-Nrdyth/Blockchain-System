<%- include('partials/header') %>

<div class="grid grid-cols-1 lg:grid-cols-2 gap-8">
  <div class="bg-white rounded-lg shadow-md p-6">
    <h2 class="text-2xl font-bold mb-4 text-gray-800">
      <i class="fas fa-user-plus"></i> Add New User
    </h2>
    <form action="/users" method="POST" class="space-y-4">
      <div>
        <label class="block text-gray-700 font-bold mb-2">Name</label>
        <input
          type="text"
          name="name"
          required
          class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500"
        />
      </div>
      <div>
        <label class="block text-gray-700 font-bold mb-2">Email</label>
        <input
          type="email"
          name="email"
          required
          class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500"
        />
      </div>
      <div>
        <label class="block text-gray-700 font-bold mb-2">Wallet Address</label>
        <input
          type="text"
          name="walletAddress"
          required
          class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500"
        />
      </div>
      <button
        type="submit"
        class="w-full bg-blue-600 text-white py-2 rounded-lg hover:bg-blue-700 transition"
      >
        <i class="fas fa-plus"></i> Add User
      </button>
    </form>
  </div>

  <div class="bg-white rounded-lg shadow-md p-6">
    <h2 class="text-2xl font-bold mb-4 text-gray-800">
      <i class="fas fa-users"></i> User List
    </h2>
    <div class="space-y-4">
      <% users.forEach(user => { %>
      <div class="border border-gray-200 rounded-lg p-4">
        <div class="flex justify-between items-center">
          <div>
            <h3 class="font-bold text-lg"><%= user.name %></h3>
            <p class="text-gray-600"><%= user.email %></p>
            <p class="text-sm text-gray-500">
              Wallet: <%= user.walletAddress.substring(0, 10) %>...
            </p>
          </div>
          <div class="text-right">
            <p class="text-2xl font-bold text-green-600"><%= user.balance %></p>
            <p class="text-sm text-gray-500">Balance</p>
          </div>
        </div>
      </div>
      <% }) %>
    </div>
  </div>
</div>
<script>
  // Cek jika ada parameter wallet di URL
  const urlParams = new URLSearchParams(window.location.search);
  const walletParam = urlParams.get("wallet");
  if (walletParam) {
    document.querySelector('input[name="walletAddress"]').value = walletParam;
  }
</script>

<%- include('partials/footer') %>
