<%- include('partials/header') %>

<div class="grid grid-cols-1 md:grid-cols-3 gap-6 mb-8">
  <div class="bg-white p-6 rounded-lg shadow-md">
    <h2 class="text-xl font-bold mb-4 text-gray-800">
      <i class="fas fa-cubes text-blue-600"></i> Total Blocks
    </h2>
    <p class="text-3xl font-bold text-blue-600"><%= blockchain.length %></p>
  </div>

  <div class="bg-white p-6 rounded-lg shadow-md">
    <h2 class="text-xl font-bold mb-4 text-gray-800">
      <i class="fas fa-tachometer-alt text-green-600"></i> Mining Difficulty
    </h2>
    <p class="text-3xl font-bold text-green-600"><%= difficulty %></p>
  </div>

  <div class="bg-white p-6 rounded-lg shadow-md">
    <h2 class="text-xl font-bold mb-4 text-gray-800">
      <i class="fas fa-coins text-yellow-600"></i> Mining Reward
    </h2>
    <p class="text-3xl font-bold text-yellow-600"><%= miningReward %> Coins</p>
  </div>
</div>

<div class="bg-white rounded-lg shadow-md p-6 mb-8">
  <h2 class="text-2xl font-bold mb-4 text-gray-800">
    <i class="fas fa-hammer"></i> Mine Block
  </h2>
  <form action="/mine" method="POST" class="flex flex-col md:flex-row gap-4">
    <input
      type="text"
      name="miningRewardAddress"
      placeholder="Enter wallet address for reward"
      class="flex-1 px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500"
      required
    />
    <button
      type="submit"
      class="bg-blue-600 text-white px-6 py-2 rounded-lg hover:bg-blue-700 transition"
    >
      <i class="fas fa-hammer"></i> Mine Block
    </button>
  </form>
</div>

<div class="bg-white rounded-lg shadow-md p-6">
  <h2 class="text-2xl font-bold mb-4 text-gray-800">
    <i class="fas fa-cube"></i> Latest Blocks
  </h2>
  <div class="space-y-4">
    <% blockchain.slice(-5).reverse().forEach(block => { %>
    <div class="border border-gray-200 rounded-lg p-4">
      <div class="flex justify-between items-center mb-2">
        <span class="font-bold text-blue-600">Block #<%= block.index %></span>
        <span class="text-sm text-gray-500"><%= block.timestamp %></span>
      </div>
      <div class="text-sm text-gray-600">
        <p><strong>Hash:</strong> <%= block.hash.substring(0, 20) %>...</p>
        <p>
          <strong>Previous Hash:</strong> <%= block.previousHash.substring(0,
          20) %>...
        </p>
        <p><strong>Nonce:</strong> <%= block.nonce %></p>
        <p>
          <strong>Transactions:</strong> <%= Array.isArray(block.data) ?
          block.data.length : 1 %>
        </p>
      </div>
    </div>
    <% }) %>
  </div>
</div>

<%- include('partials/footer') %>
