<%- include('partials/header') %>

<div class="bg-white rounded-lg shadow-md p-6 mb-8">
  <h2 class="text-2xl font-bold mb-4 text-gray-800">
    <i class="fas fa-info-circle"></i> Blockchain Information
  </h2>
  <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
    <div>
      <p class="text-gray-600 mb-2"><strong>Chain Validity:</strong></p>
      <span
        class="px-3 py-1 rounded-full text-sm font-bold <%= isValid ? 'bg-green-100 text-green-800' : 'bg-red-100 text-red-800' %>"
      >
        <%= isValid ? 'VALID' : 'INVALID' %>
      </span>
    </div>
    <div>
      <p class="text-gray-600 mb-2"><strong>Total Blocks:</strong></p>
      <p class="text-xl font-bold"><%= blockchain.length %></p>
    </div>
  </div>
</div>

<div class="bg-white rounded-lg shadow-md p-6">
  <h2 class="text-2xl font-bold mb-4 text-gray-800">
    <i class="fas fa-cubes"></i> All Blocks
  </h2>
  <div class="space-y-4">
    <% blockchain.reverse().forEach(block => { %>
    <div class="border border-gray-200 rounded-lg p-4">
      <div class="flex justify-between items-center mb-3">
        <span class="font-bold text-blue-600 text-lg"
          >Block #<%= block.index %></span
        >
        <span class="text-sm text-gray-500"><%= block.timestamp %></span>
      </div>
      <div class="grid grid-cols-1 md:grid-cols-2 gap-4 text-sm">
        <div>
          <p class="mb-1"><strong>Hash:</strong></p>
          <p class="font-mono text-xs bg-gray-100 p-2 rounded">
            <%= block.hash %>
          </p>
        </div>
        <div>
          <p class="mb-1"><strong>Previous Hash:</strong></p>
          <p class="font-mono text-xs bg-gray-100 p-2 rounded">
            <%= block.previousHash %>
          </p>
        </div>
      </div>
      <div class="mt-3">
        <p class="mb-1"><strong>Nonce:</strong> <%= block.nonce %></p>
        <p class="mb-1">
          <strong>Transactions:</strong> <%= Array.isArray(block.data) ?
          block.data.length : 1 %>
        </p>
      </div>
      <% if (Array.isArray(block.data) && block.data.length > 0) { %>
      <div class="mt-4">
        <p class="font-bold mb-2">Transaction Details:</p>
        <div class="space-y-2">
          <% block.data.forEach(tx => { %>
          <div class="bg-gray-50 p-3 rounded text-xs">
            <p><strong>Amount:</strong> <%= tx.amount %> Coins</p>
            <p><strong>From:</strong> <%= tx.fromAddress || 'System' %></p>
            <p><strong>To:</strong> <%= tx.toAddress %></p>
          </div>
          <% }) %>
        </div>
      </div>
      <% } %>
    </div>
    <% }) %>
  </div>
</div>

<%- include('partials/footer') %>
